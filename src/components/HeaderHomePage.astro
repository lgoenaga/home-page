---
import Logo from './Logo.astro'
---
<header 
	id="homepage-header"
	class="py-3 px-10 flex items-center fixed top-0 w-full justify-between z-40 text-current"
>
	<div class="flex flex-grow basis-0">
		<Logo />
	</div>
	<nav>
		<ul
			class="ul-homepage flex text-xl [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
		>
			<li><a href="#">Model S</a></li>
			<li><a href="#">Model X</a></li>
			<li><a href="#">Model 3</a></li>
			<li><a href="#">Model Y</a></li>
			<li><a href="#">Powerwall</a></li>
			<li><a href="#">Carga</a></li>
		</ul>
	</nav>
	<nav class="flex flex-grow basis-0 justify-end">
		<ul
			class="ul-homepage flex text-xl [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
		>
			<li><a href="#">Soporte</a></li>
			<li><a href="#">Tienda</a></li>
			<li><a href="#">Cuenta</a></li>
			<li><a href="#">Menu</a></li>
		</ul>
	</nav>
</header>
<script>
	const $header = document.querySelector('#homepage-header') as HTMLElement
	const observerOptions = {
		root: null,
		rootMargin: '0px',
		threshold: 0.90,
	}

	const observer = new IntersectionObserver(entries => {
		entries.forEach(entry => {
			const { isIntersecting } = entry
			if (isIntersecting) {
				const color = entry.target.getAttribute('data-header-color')
				$header.style.color = color
				
			}
		})
	}, observerOptions)

		const $sections = document.querySelectorAll('.homepage-section')
		$sections.forEach(section => {
			observer.observe(section)
		})

</script>
